extends base

block content
  - var action = '/books'
  if (!book.isNew)
    - action += '/'+book.id

  form(action=action, method='post')
    if(!book.isNew)
      input(type='hidden', name='_method', value='put')

    p
      label Title
        br
        input.input.input-xxlarge(name='title', type='text', value=book.title)

    p
      label Body
        br
        textarea.input-xxlarge(name='body', rows=20, placeholder='Use Markdown syntax')=book.body

    p
      label Tags
        br
        input(name='tags', type='text', value=book.tags, placeholder='Enter tags, comma seperated')

    p
      button.btn.btn-primary(type='submit') Save book
